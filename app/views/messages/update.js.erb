<% if @message.errors.any? %>
  $('#edit_message_<%= @message.id %>').closest('.modal-dialog').replaceWith('<%=j render 'edit_form' %>');
<% else %>
  $('#message-id-<%= @message.id %>').replaceWith("<%=j render partial: 'messages/message', object: @message %>");
  $('#modal-window').modal('hide')
<% end %>