<% if @message.new_record? %>
  $('#topic-id-<%= @message.topic.id %>').find('#new_message').effect('shake');
<% else %>
  $('#topic-id-<%= @message.topic.id %>').find('.messages').append('<%=j render partial: 'messages/message', object: @message %>');
  var form = $('#topic-id-<%= @message.topic.id %>').find('#new_message');
  form.find('#message_text').val('');
  form.find('#message_attachment_ids').val('');
  form.find('.attachments').html('');
<% end %>