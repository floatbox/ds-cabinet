<article class="comment-item media" id="comment-form">
  <a class="pull-left thumb-small avatar"><img src="/images/avatar_dummy.png" class="img-circle"></a>
  <section class="media-body">
    <%= simple_form_for [message.topic, message], remote: true, html: { class: 'm-b-none' } do |f| %>
      <div class="input-group">
        <%= f.input_field :text, as: :text, placeholder: 'Введите ваш комментарий', class: 'form-control', autocomplete: 'off' %>
        <%= f.input :attachment_ids, as: :hidden %>
        <span class="input-group-btn">
          <%= f.button :submit, 'ОТПРАВИТЬ', class: 'btn btn-primary', style: "height:54px;" %>
        </span>
      </div>
      <div class="attachments"></div>
    <% end %>
    <%= form_for Attachment.new, html: { class: 'fileupload', multipart: true } do |f| %>
      <div class="dropfile m-t block">
        <%= f.file_field :attachment, style: 'display:none' %>
        <small><i class="icon-cloud-upload"></i> Перетащите сюда файлы</small>
      </div>
    <% end %>
  </section>
</article>