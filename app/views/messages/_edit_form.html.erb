<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title">Редактировать сообщение</h4>
    </div>
    <%= simple_form_for @message, remote: true do |f| %>
    <div class="modal-body">
      <% if @message.errors.any? %>
        <%= render 'errors', target: @message %>
      <% end %>
      <%= f.input_field :text, placeholder: 'Текст сообщения', maxlength: false, rows: 5, class: 'form-control js-submit-by-hotkey' %>
      <%= render 'length_validation' %>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Отменить</button>
      <%= f.button :submit, 'Отправить', class: 'btn btn-primary' %>
    </div>
    <% end %>
  </div>
</div>
