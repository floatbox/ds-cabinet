<article id="comment-id-1" class="comment-item media arrow arrow-left">
  <a class="pull-left thumb-small avatar"><img src="/images/avatar_dummy.png" class="img-circle"></a>
  <section class="media-body panel">
    <header class="panel-heading clearfix">
      <a href="#"><%= message.user.siebel.full_name %></a>
      <% if message.user.concierge? %>
        <label class="label bg-info m-l-mini">Консьерж</label>
      <% end %>
      <span class="text-muted m-l-small pull-right"><i class="icon-time"></i><%= time_ago_in_words(message.created_at) %> назад</span>
    </header>
    <div class="panel-body">
      <div><%= message.text %></div>
    </div>
  </section>
</article>