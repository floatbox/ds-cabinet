<% @topics.each do |topic| %>
  if ($('#topic-id-<%= topic.id %>').length == 0) {
    var topic = $("<%=j render partial: 'concierge/topics/topic', object: topic, as: :topic %>");
    $('#topics').prepend(topic);
    $(topic).find('.panel-body').hide().toggle('highlight', 2000);
  }
  else {
    var topic = $('#topic-id-<%= topic.id %>');
    topic.find('.topic-body').html("<%=j render partial: 'concierge/topics/topic_body', object: topic, as: :topic %>")
  }
<% end %>