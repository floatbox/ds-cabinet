<% @topics.each do |topic| %>
  if ($('#js-topic-id-<%= topic.id %>').length == 0) {
    var topic = $("<%=j render partial: 'concierge/topics/topic', object: topic, as: :topic %>");
    $('#js-topics').prepend(topic);
    $(topic).hide().toggle('highlight', 2000);
  }
  else {
    var topic = $('#js-topic-id-<%= topic.id %>');
    topic.find('.js-topic-body').html("<%=j render partial: 'concierge/topics/topic_body', object: topic, as: :topic %>")
  }
<% end %>