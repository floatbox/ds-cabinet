<div class="tariff_select_fragment" <%= (defined?(visible) && visible) ? "" : " style=display:none;" %>>
  <section class="case-intro">
    <div class="globalwidth">
      <div class="content" style="background-image:url(/legko-bs/images/intro3_bg.jpg);">
        <div class="info">
          <h2>Выбирайте тариф,<br/>подходящий вам</h2>
        </div>
      </div>
    </div>
  </section>
  <section class="case-lead">
    <div class="globalwidth">
      <div class="content">
        <div class="board">
          <div class="info">
            <ul>
              <li>подготовим налоговую отчетность,</li>
              <li>предоставим информацию по приходу и расходу</li>
              <li>осуществим операции по р/с и платежи.</li>
            </ul>
            <a class="play" href="#"></a>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="case-tariff">
    <div class="globalwidth">
      <div class="content">
        <h2>Выберите тариф</h2>
        <div class="items">
          <% RegistrationOffering.all.each do |offering| -%>
            <% partial_name = "offerings/price_id_#{offering.offering_price_id}" -%>
            <%= 
              begin
                render partial: partial_name, locals: {offering: offering}
              rescue ActionView::MissingTemplate => e
                ""
              end 
            %>
          <% end -%>
        </div>
      </div>
    </div>
  </section>
  <div class="modal fade" id="js-modal_success_dialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <form action="<%= :process_payment_link %>" method="post" class="js-process_payment_form">
          <input type="hidden" name="PaymentType" value="acquiring">
          <input type="hidden" name="Receipt.FIO" value="<%= :user_first_name %> <%= :user_last_name %>">
          <input type="hidden" name="Receipt.Address" value="">
          <p><span class="js-process_payment_desc">Тут описание выбранного прлатежа</span></p>
          <div class="btn-group">
            <button data-dismiss="modal" class="btn-grn btn-left  btn125">Отмена</button>
            <button type="submit"        class="btn-orn btn-right btn125"> Оплатить </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
