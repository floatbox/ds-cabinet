 <div class="registration_input_fragment" <%= (defined?(visible) && visible) ? "" : " style=display:none;" %>>
   <section class="case-intro index">
    <div class="globalwidth">
      <div class="container" style="background:url(/legko-bs/images/intro1_bg.jpg) 0 -1px;">
        <div class="info">
          <h2>Мы станем вашим личным бухгалтером!</h2>
          <div class='js-forms_container'>
            <div class="ttl active" data-fl="regi_fl">Регистрация</div>
            <div class="ttl last" data-fl="enter_fl">Вход</div>
            
            <!-- Регистраци здесь -->
            <div class="forms">
              <%= simple_form_for Registration.new, remote: true, authenticity_token: true do |f| %>
                <table width="270" class="tb_fields">
                  <tr class="regi_fl">
                    <td>
                      <div class="border">
                        <table width="100%">
                          <tr>
                            <td class="pl20">
                              <label id="switch_status" class="cuc-switcher_label">Я являюсь ИП</label>
                            </td>
                            <td width="66">
                              <div class="switcher js__switcher">
                                <a href="#" class="s_checkbox js__s_checkbox js__s_left">
                                  <span id="switch_btn1" class="js__s_active"></span>
                                  <span id="switch_btn2" class="js__s_noactive"></span>
                                </a>
                              </div>
                            </td>
                          </tr>
                        </table>
                      </div>
                    </td>
                  </tr>
                  
                  <tr class="regi_fl switch_field">
                    <td>
                      <div class="field">
                        <%= ogrn_input f %>
                      </div>
                    </td>
                  </tr>
                  <tr class="regi_fl switch_field">
                    <td>
                      <div class="field">
                        <%= phone_input f %>
                      </div>
                    </td>
                  </tr>
                  <tr class="regi_fl switch_field">
                    <td>
                      <div class="btn-group">
                        <button class="btn-grn btn-right btn125" type="submit">Зарегистрироваться</button>
                      </div>
                      <div class="link-group legal-link">
                        Регистрируясь, вы соглашаетесь с <a href="/TermsOfUseLegko.pdf" target="_blank">Условиями использования</a> и <a href="/legal.html" target="_blank">Политикой конфиденциальности</a>
                      </div>
                    </td>
                  </tr>
                  <tr class="regi_fl switch_field_on hide">
                    <td>
                      <div class="link-group legal-link">
                        Воспользуйтесь нашим <a href="https://fns01.dasreda.ru/" target="_blank">Сервисом онлайн регистрации ИП</a>
                      </div>
                    </td>
                  </tr>
                </table>
              <% end -%>
              
              <!-- Вход здесь -->
              <div class="js-new_session">
                <%= form_tag sessions_path, remote: true, id: "new_session" do %>
                  <table width="270" class="tb_fields">
                    <tr class="enter_fl">
                      <td>
                        <div class="field">
                          <%= text_field_tag :phone, params[:phone], class: 'phone', placeholder: 'Введите телефон' %>
                        </div>
                      </td>
                    </tr>
                    <tr class="enter_fl">
                      <td>
                        <div class="field">
                          <%= password_field_tag :password, params[:password], placeholder: 'Пароль' %>
                        </div>
                      </td>
                    </tr>
                    <tr class="enter_fl">
                      <td class="right">
                        <div class="btn-group">
                          <button class="btn-grn btn-right btn125" type="submit">Войти</button>
                        </div>
                        <div class="link-group legal-link">
                          <a href="#">Напомнить пароль</a>
                        </div>
                      </td>
                    </tr>
                  </table>
                <% end -%>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <%= render partial: "registrations/cases" %>
</div>
