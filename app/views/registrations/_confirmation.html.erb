<div class="registration_confirm_fragment" <%= (defined?(visible) && visible) ? "" : " style=display:none;" %>>
  <section class="case-intro approve">
    <div class="globalwidth">
      <div class="content" style="background-image:url(/legko-bs/images/intro2_bg.jpg);">
        <div class="info">
          <h2>Подтвердите правильность ваших данных</h2>
          <div class="forms">
            <%= form_tag registration_confirm_path(:registration_id), remote: true, class: "simple_form js-confirmation_form" do %>
              <div class="border">
                <table>
                <tr>
                    <td class="pl25" width="112">ОГРН</td>
                    <td><span class="js-registration_ogrn">354277987918273912</span></td>
                  </tr>
                  <tr>
                    <td class="pl25">Имя</td>
                    <td><span class="js-registration_first_name">Константин</span></td>
                  </tr>
                  <tr>
                    <td class="pl25">Фамилия</td>
                    <td><span class="js-registration_last_name">Мизельник-Штанько</span></td>
                  </tr>
                  <tr>
                    <td class="pl25">Телефон</td>
                    <td><span class="js-registration_phone">+7965 7802621</span></td>
                  </tr>
                </table>
              </div>
              <table>
                <tr>
                  <td><label>Пароль (отправлен в смс)</label>
                    <div class="note">
                      <%= link_to(
                        "Отправить еще раз<span class='counter_text'></span>".html_safe, 
                        '#', class: 'js-regenerate_password_link'
                      ) %>
                    </div>
                  </td>
                  <td width="105">
                    <div class="field field-valid">
                      <%= text_field_tag :password, params[:password] %>
                    </div>
                  </td>
                </tr>
                <tr>
                  <td colspan="2">
                    <div class="btn-group">
                      <button class="btn-grn btn-left js-back" href='#'>Отправить данные еще раз</button>
                      <button class="btn-grn btn-right btn125" type="submit">Дальше</button>
                    </div>
                    <div class="send-status">
                      Данные отправлены
                    </div>
                  </td>
                </tr>
              </table>
            <% end -%>
            <%= form_tag registration_regenerate_password_path(:registration_id), class: 'js-regenerate_password_form', remote: true, method: :post do %>
            <% end -%>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
