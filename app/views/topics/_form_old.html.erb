<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title">Задайте вопрос службе консьержей. Это может быть вопрос о ведении бухгалтерии, юридических аспектах деятельности или предпринимательстве в целом.</h4>
    </div>
    <%= simple_form_for @topic, remote: true do |f| %>
    <div class="modal-body">
      <% if @topic.errors.any? %>
        <%= render 'errors', target: @topic %>
      <% end %>
      <%= f.input_field :text, placeholder: 'Постарайтесь сформулировать вопрос кратко и емко', maxlength: false, rows: 5, class: 'form-control js-submit-by-hotkey' %>
      <%= render 'length_validation' %>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Отменить</button>
      <%= f.button :submit, 'Отправить', class: 'btn btn-primary' %>
    </div>
    <% end %>
  </div>
</div>
