<%= simple_form_for topic, remote: true do |f| %>
  <% if topic.errors.any? %>
    <%= render 'errors', target: topic %>
  <% end %>
  <%= f.text_field :text, placeholder: 'Задать вопрос', class: 'textbox js-submit-by-hotkey' %>
  <%= f.button :submit, 'Отправить', class: 'default-button' %>
<% end %>