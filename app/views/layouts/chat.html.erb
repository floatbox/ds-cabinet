  <body class="main">
    <article class="page">
  <header class="page-header">
    <div class="globalwidth">
      <a class="logo" href="/"></a>
      <nav class="tm">
        <ul>
          <li><%= link_to 'Выйти', session_path('current_user'), method: :delete, class: 'gotoRegistrationForm' %></li>
        </ul>
      </nav>
    </div>
  </header>

  <section class="page-body">
  <div class="registration_input_fragment" >
     <section class="case-intro index">
      <div class="globalwidth">
        <div class="container" style="background:url(/legko-bs/images/bg/bg_chat.jpg) no-repeat 0 0;">
          <div class="info">
            <h2>Личный кабинет</h2>
          </div>
