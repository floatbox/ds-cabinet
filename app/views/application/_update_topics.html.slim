- url = ''
- if current_user.concierge?
  - if @user
    - url = concierge_user_topics_url(@user, page: params[:page], format: 'js')
  - else
    - url = concierge_topics_url(page: params[:page], format: 'js')
- else
  - url = topics_url(page: params[:page], format: 'js')

javascript:
  function update() { $.get("#{url}"); }
  setInterval(update, 30000);